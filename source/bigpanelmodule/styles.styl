// bigpanel styles

list-arrow-size = 25px
upload-button-size = 30px

//##########################################################
#admin-bigpanel
    position fixed
    top 0
    left 0
    background-color alpha(#012, 0.4)
    padding: 20px
    padding-bottom 100px
    box-sizing: border-box
    width: 100%
    height: 100vh
    transition transform 0.2s

#admin-bigpanel.hidden
    transform: translateY(102%)

//##########################################################
#admin-bigpanel-tabheads
    display flex
    justify-content: space-between

.admin-bigpanel-tabhead
    padding 5px 10px
    cursor: pointer
    color #012
    background-color alpha(white,0.7)

.admin-bigpanel-tabhead.active
    color white
    background-color alpha(#012, 0.7)

//##########################################################
#admin-bigpanel-tabframe
    position relative
    width 100%
    height 100%    
    background-color transparent
    overflow-y: auto

.admin-bigpanel-tabcontent
    display none
    background-color alpha(#012, 0.7)
    color white
    padding 10px

.admin-bigpanel-tabcontent.active
    display block

//##########################################################
.admin-bigpanel-tabcontent
    .list-element-container.hidden
        display none
    .admin-bigpanel-edit-element
        display none
    .admin-bigpanel-edit-element.active
        display block
    .admin-bigpanel-list-element
        display: flex
        align-items: center
        justify-content: space-between
        background-color white
        color #012
        padding 5px 20px
        margin-bottom: 15px
        cursor pointer
    .admin-bigpanel-list-element > *
        pointer-events: none
    .admin-bigpanel-arrow-right
        height: list-arrow-size
        width: list-arrow-size
        svg
            height: list-arrow-size
            width: list-arrow-size
    .admin-bigpanel-edit-head
        border-top solid 2px white
        border-bottom solid 2px white
        display flex
        align-items: center
        text-align right
        justify-content: space-between
        padding 10px 5px
        margin-bottom 20px

    .admin-bigpanel-file-upload-section
        display flex
        justify-content: space-between
        align-items: center
        margin-bottom 20px
        input
            max-width: 86%
    
    .admin-bigpanel-image-preview-section
        display flex
        flex-direction: column
        width 100%
        align-items: center
        overflow hidden
        img
            margin-bottom: 10px

    .admin-bigpanel-upload-button
        border solid 2px white
        margin-left auto
        cursor pointer
        height: upload-button-size
        width: upload-button-size
        svg
            height: upload-button-size
            width: upload-button-size
    .admin-bigpanel-upload-button > * 
        pointer-events: none
    .admin-bigpanel-arrow-left
        cursor pointer
        height: list-arrow-size
        width: list-arrow-size
        svg
            height: list-arrow-size
            width: list-arrow-size
    .admin-bigpanel-arrow-left > * 
        pointer-events none
    